<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    android:gravity="center"
    android:alpha="0.8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:alpha="0.4"/>

            <LinearLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"

                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/image_energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/energy"
                    android:outlineSpotShadowColor="@color/dark_green"/>

                <TextView
                    android:id="@+id/text_Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="arial"
                    android:text="@string/guion"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titulo_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="arial"
                    android:text="@string/titulo_login"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Pantalla_Principal"
                    android:background="@drawable/button_functions"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btnEstadisticas"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/estad_sticas"
                    android:background="@drawable/button_functions"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btnBeneficios"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/consejos"
                    android:background="@drawable/button_functions"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btnUpgrade"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/actualizar"
                    android:background="@drawable/button_functions"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/consejoCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="15dp"
                android:alpha="0.5"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/Descripcion"
                        android:src="@drawable/ideas"
                        android:translationZ="10dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/consejoTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:text="@string/consejo_aleatorio"
                            android:textColor="@color/dark_green"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/cantidadRegistrosTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="@string/Limpiar"
                            android:textSize="0sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
